<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

<grid name="Article-detail-grid" title="Liste des Articles" model="com.axelor.apps.purchase.db.ArticleDetails">
	<field name="article"/>
	<field name="quantite2"/>
	<field name="unite"/>
</grid>

<form name="Article-detail-form" title="Articles" model="com.axelor.apps.purchase.db.ArticleDetails" width="large">
	<panel name="articlePanel" >
		<field name="article" target-name="nom_fr" colSpan="4"/>
		<field name="quantite2" colSpan="4"/>
		<field name="unite" colSpan="4"/>
		<field name="description" widget="Text" colSpan="12" css="form-control"/>
	</panel>
</form>




</object-views>