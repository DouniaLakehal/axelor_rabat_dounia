<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.3.xsd">

    <module name="configuration" package="com.axelor.apps.configuration.db"/>

    <entity name="Groupes" lang="java">
        
       <string name="name" title="Groupe" required="true"/>
        <string name="type" title="Type" selection="config.deplacement.configurationDeplacement" default="1"/>
        <decimal name="indemniteInterne1" title="Pendant les 15 premiers jours dans la même localité" default="0"/>
        <decimal name="indemniteInterne2" title="A compter du 16e jours dans la même localité"  default="0"/>
        <decimal name="indemniteExterne" title="Indemnité journalier"  default="0"/>
        
        
    </entity>

</domain-models>